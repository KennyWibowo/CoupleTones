<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/arrival_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/arrivalTone"
        android:layout_column="0"
        android:layout_row="0" />

    <Button
        android:id="@+id/departure_vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/departureVibration"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/arrival_vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/arrivalVibration"
        android:layout_column="0"
        android:layout_row="1" />

    <Button
        android:id="@+id/departure_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departureTone"
        android:gravity="center"
        android:layout_column="1"
        android:layout_row="0" />

</GridLayout>
</RelativeLayout>